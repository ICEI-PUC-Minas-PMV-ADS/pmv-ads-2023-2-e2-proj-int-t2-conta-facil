@model ContaFacil2.Models.Cadastro

@{
    ViewData["Title"] = "Delete";
}

<style>
    h1 {
        color: white;
        font-family: 'DM Serif Display', serif;
        font-size: 60px;
    }

    h3 {
        color: white;
        font-family:  serif;
        font-size: 40px;
    }

   
    .row {
        background-color: rgba(0,0,0,0.7);
        width: 100%;
        height: 500px;
        padding: 20px;
        border-radius: 20px;
        display: inline-flex;
        color: white;
        font-size: 20px;
    }

    hr {
        color: aqua;
    }

    form {
        color: white;
    }

</style>

<h1>Apagar registro?</h1>

<h3>Após essa ação, não será possível recuperar as informações! </h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Logadouro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Logadouro)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cidade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Uf)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Uf)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CEP)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CEP)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cpf)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cpf)
        </dd>       
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Perfil)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Perfil)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <a class="btn btn-success" asp-action="Index">Voltar</a> |
        <input type="hidden" asp-for="Email" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        
    </form>
</div>
