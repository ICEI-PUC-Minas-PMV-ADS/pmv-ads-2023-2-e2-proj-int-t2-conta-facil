@model ContaFacil2.Models.Cadastro

@{
    ViewData["Title"] = "Login";
}

<style>
    h1{
        color:white;
        font-family: 'DM Serif Display', serif;
        font-size:70px;
    }

    .form-group {
        height:80px;
        display:inline-block;
        border-radius:8px;
        width:450px;
        color:white;
    }
    .row{
        background-color:rgba(0,0,0,0.7);
        width: 100%;
        height: 450px;
        padding: 20px;
        border-radius: 20px;
        display:inline-flex;
    }
    hr{
        color:aqua;
    }

</style>



<body>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@1&family=Playfair+Display:ital,wght@0,600;1,500&display=swap" rel="stylesheet">
<div class="row">
    <h1>Login</h1>
    <hr />
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div id="campo email" class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <br><br />
            
            <div class="form-group">
                 <a id="acessar login" class="btn btn-success" asp-action="Create">Cadastro</a> |
                <input type="submit" value="Acessar" class="btn btn-primary" />
            </div>
            <h2>@ViewBag.Message</h2>
        </form>
    </div>
</div>
</body>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
