@model IEnumerable<ContaFacil2.Models.Reserva>

@{
    ViewData["Title"] = "Index";
}
<style>
    h1{
        color: white;
        font-family: 'DM Serif Display', serif;
        font-size: 50px;
    }
</style>
<h1>Reserva Emergêncial</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Calcular Reserva de Emergência</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.salario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.totalEssenciais)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.totalNaoEssenciais)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.investimento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.salario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.totalEssenciais)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.totalNaoEssenciais)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.investimento)
            </td>
            <td>
                 <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a> | |
                 <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Apagar</a> 
            </td>
        </tr>
}
    </tbody>
</table>
