@model ContaFacil2.Saldo

@{
    ViewData["Title"] = "Delete";
}
<style>
    h1 {
        color: white;
        font-family: 'DM Serif Display', serif;
        font-size: 60px;
    }

    h3 {
        color: white;
        font-family: serif;
        font-size: 40px;
    }


    .row {
        background-color: rgba(0,0,0,0.7);
        width: 100%;
        height: 500px;
        padding: 20px;
        border-radius: 20px;
        display: inline-flex;
        color: white;
        font-size: 25px;
    }

    hr {
        color: aqua;
    }

    form {
        color: white;
    }

</style>

<h1>Remover Cadastro</h1>

<h3>Você tem certeza que deseja remover este registro?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Resumo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Resumo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo_Saldo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tipo_Saldo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a class="btn btn-info" asp-action="Index">Voltar</a> |
        <input type="submit" value="Apagar" class="btn btn-danger" />
    </form>
</div>
