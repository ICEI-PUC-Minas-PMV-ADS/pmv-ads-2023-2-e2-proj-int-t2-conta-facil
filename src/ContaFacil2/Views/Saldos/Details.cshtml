@model ContaFacil2.Saldo

@{
    ViewData["Title"] = "Details";
}
<style>
    h1 {
        color: white;
        font-family: 'DM Serif Display', serif;
        font-size: 60px;
    }

    .row {
        background-color: rgba(0,0,0,0.7);
        width: 100%;
        height: 500px;
        padding: 20px;
        border-radius: 20px;
        display: inline-flex;
        color: white;
        font-size: 25px;
    }

    hr {
        color: aqua;
    }

    #botoes {
        color: white;
    }
</style>

<h1>Dados do Cadastro</h1>

<body>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Resumo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Resumo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo_Saldo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tipo_Saldo)
        </dd>
    </dl>
</div>
<div id="botoes">
    <a asp-action="Index" class="btn btn-info">Voltar</a> |
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
</div>
</body>
