@model ContaFacil2.Saldo

@{
    ViewData["Title"] = "Edit";
}
<style>
    h1{
        color:white;
        font-family: 'DM Serif Display', serif;
        font-size: 60px;
    }
    hr{
        color:aqua;
    }

    .row {
        background-color: rgba(0,0,0,0.7);
        width: 100%;
        height: 500px;
        padding: 20px;
        border-radius: 20px;
        display: inline-flex;
    }

    .form-group {
        height: 80px;
        display: inline-block;
        border-radius: 8px;
        width: 700px;
        color: white;
        font-size: 20px;
    }
</style>


<h1>Editar dados do cadastro</h1>

<body>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resumo" class="control-label"></label>
                <input asp-for="Resumo" class="form-control" />
                <span asp-validation-for="Resumo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo_Saldo" class="control-label"></label>
                <input asp-for="Tipo_Saldo" class="form-control" />
                <span asp-validation-for="Tipo_Saldo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-info">Voltar</a> |
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
</div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
