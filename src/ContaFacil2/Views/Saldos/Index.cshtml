@model IEnumerable<ContaFacil2.Saldo>

@{
    ViewData["Title"] = "Index";
}
<style>
    h1{
        color: white;
        font-family: 'DM Serif Display', serif;
        font-size: 60px;
    }


    hr{
        color:aqua;
    }

    .row {
        background-color: rgba(0,0,0,0.7);
        width: 100%;
        height: 500px;
        padding: 20px;
        border-radius: 20px;
        display: inline-flex;
    }
    .table{
        border-radius: 20px;
        background-color: rgba(61,61,61,0.9);
        color:white;
        font-size:20px;
    }

</style>
<body>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@1&family=Playfair+Display:ital,wght@0,600;1,500&display=swap" rel="stylesheet">


<h1>Cadastro de Despesas</h1>
<hr />
<div class="row">
<div>
    <a asp-action="Create" class="btn btn-success">Adicionar novo cadastro</a>
    <a asp-action="Exportar" class="btn btn-success">Exportar</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resumo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo_Saldo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resumo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo_Saldo)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Visualizar</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" a class=" btn btn-danger">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
 </div>
</body>
