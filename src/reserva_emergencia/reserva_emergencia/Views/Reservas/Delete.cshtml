
@model reserva_emergencia.Models.Reserva

@{
    ViewData["Title"] = "Delete";
}

<h1>Apagar Registro de Reserva Emergêncial?</h1>

<h3>Tem certeza que deseja remover esse registro?</h3>
<div>
    <h4>Minha Reserva</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.salario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.totalEssenciais)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.totalNaoEssenciais)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.investimento)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-danger">Voltar</a>
        <input type="submit" value="Delete" class="btn btn-danger" />                   
    </form>
</div>
